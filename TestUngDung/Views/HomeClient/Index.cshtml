

@model IEnumerable<ModelEF.Model.Product>
@using PagedList.Mvc
@using PagedList
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row tow-column-product">
    <div class="row">
        <!-- FEATURED-PRODUCTS-AREA START -->
        <div class="featured-products-area">
            <div class="center-title-area">
                <h2 class="center-title">Sản phẩm mới</h2>
            </div>
            <div class="col-xs-12">
                <div class="row">
                    <!-- FEARTURED-CAROUSEL START -->
                    <div class="feartured-carousel">
                        @if (Model.Count() == 0)
                        {
                            <label class="badge badge-warning">Không tìm thấy sản phẩm</label>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <!-- SINGLE-PRODUCT-ITEM START -->
                                <div class="rt">
                                    <div class="single-product-item">
                                        <div class="product-image">
                                            <a href="#"><img src="~/Assets/images/@item.Image" alt="product-image" /></a>
                                            <a href="#" class="new-mark-box">new</a>
                                            <div class="overlay-content">
                                                <ul>
                                                    <li><a href="#" title="Quick view"><i class="fa fa-search"></i></a></li>
                                                    <li><a href="#" title="Quick view"><i class="fa fa-shopping-cart"></i></a></li>
                                                    <li><a href="#" title="Quick view"><i class="fa fa-retweet"></i></a></li>
                                                    <li><a href="#" title="Quick view"><i class="fa fa-heart-o"></i></a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="product-info">
                                            <div class="customar-comments-box">
                                                <div class="rating-box">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-half-empty"></i>
                                                </div>
                                                <div class="review-box">
                                                    <span>Còn @Html.DisplayFor(modelItem => item.Quantity)</span>
                                                </div>
                                            </div>
                                            <a href="#">@Html.DisplayFor(modelItem => item.ProductName)</a>
                                            <div class="price-box">
                                                <span class="price">@String.Format("{0:0,0 VND}", item.UnitCost) </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- SINGLE-PRODUCT-ITEM END -->
                            }
                        }
                    </div>
                    <!-- FEARTURED-CAROUSEL END -->
                </div>

            </div>
        </div>
        <!-- FEATURED-PRODUCTS-AREA END -->
    </div>
</div>
